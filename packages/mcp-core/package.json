{
  "name": "@bmad/mcp-core",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:node:crypto --external:crypto && tsc -p tsconfig.json --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun --hot ./src/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json",
    "test": "bun test"
  },
  "dependencies": {
    "zod": "^3.23.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.11.30",
    "@bmad/shared-config": "workspace:*"
  }
}
