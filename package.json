{
  "name": "bmad-mcp-server",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:cli": "turbo run dev --filter=apps/mcp-server-cli",
    "dev:ws": "turbo run dev --filter=apps/mcp-server-ws",
    "dev:worker": "turbo run dev --filter=apps/worker",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "release:binary": "turbo run compile --filter=apps/mcp-server-cli",
    "release:docker": "turbo run docker --filter=apps/mcp-server-ws",
    "compose:up": "docker compose -f infra/docker-compose.yml up -d"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "latest",
    "typescript": "^5.5.0",
    "@types/node": "^20.11.30",
    "eslint": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "bun@1.2.21"
}
